{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run File",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Tests In File",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["--config", "${workspaceFolder}/jest.config.js", "${file}"],
      "console": "integratedTerminal"
    }
  ]
}
